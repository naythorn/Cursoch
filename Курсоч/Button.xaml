                <Setter Property="Background" Value="Red"/>
            </DataTrigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF9900"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="BorderDisadvantages" TargetType="Border" >
